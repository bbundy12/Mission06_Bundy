
@model Movie

<div class="confirmation-page">
    <h1>Thank you for submitting your movie information!</h1>
    <p>The details for <strong>@Model.Title</strong> have been successfully submitted.</p>
    <div>
        <h2>Movie Information:</h2>
        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd>@Model.Title</dd>

            <dt>Director:</dt>
            <dd>@Model.Director</dd>

            <dt>Release Year:</dt>
            <dd>@Model.ReleaseYear</dd>

            <dt>Genre:</dt>
            <dd>@Model.Genre</dd>

            <dt>Rating:</dt>
            <dd>@Model.Rating</dd>
        </dl>
    </div>
    <p><a href="@Url.Action("MoviesForm", "Home")">Return to the movie form</a></p>
</div>

