@model Movie

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Confirm Deletion</h2>
            <div class="card card-body bg-light">
                <h3 class="text-danger">Are you sure you want to delete this movie?</h3>
                <h4>"@Model.Title" (@Model.Year)</h4>
                <form method="post">
                    <input type="hidden" asp-for="MovieID" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="MovieList">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

